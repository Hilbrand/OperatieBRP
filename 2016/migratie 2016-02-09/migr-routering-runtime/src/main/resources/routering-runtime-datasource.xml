<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="routeringDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass" value="${routering.database.driver:org.postgresql.Driver}"/>
        <property name="jdbcUrl" value="${routering.database.url:jdbc:postgresql://localhost/routering}"/>
        <property name="user" value="${routering.database.username:postgres}"/>
        <property name="password" value="${routering.database.password:postgres}"/>
        <property name="minPoolSize" value="${routering.database.minpool:3}"/>
        <property name="maxPoolSize" value="${routering.database.maxpool:20}"/>
    </bean>

