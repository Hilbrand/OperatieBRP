<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>nl.bzk</groupId>
    <artifactId>migratiebrp</artifactId>
    <version>3.2.108-SNAPSHOT</version>
    <relativePath>../migr</relativePath>
  </parent>
  <groupId>nl.bzk.migratiebrp</groupId>
  <artifactId>migr-docker</artifactId>
  <packaging>pom</packaging>
  <dependencies>
    <!-- Project -->
    <dependency>
      <groupId>nl.bzk.migratiebrp.tools</groupId>
      <artifactId>migr-tools-brp-database</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>nl.bzk.migratiebrp.tools</groupId>
      <artifactId>migr-tools-brp-routering</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>nl.bzk.migratiebrp.tools</groupId>
      <artifactId>migr-tools-mailbox</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>nl.bzk.migratiebrp.tools</groupId>
      <artifactId>migr-tools-gbav-database</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>nl.bzk.migratiebrp.tools</groupId>
      <artifactId>migr-tools-hornetq</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>nl.bzk.migratiebrp.routering</groupId>
      <artifactId>migr-routering-runtime</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>nl.bzk.migratiebrp.synchronisatie</groupId>
      <artifactId>migr-synchronisatie-runtime</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>nl.bzk.migratiebrp.isc</groupId>
      <artifactId>migr-isc-runtime</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>nl.bzk.migratiebrp.isc.console</groupId>
      <artifactId>migr-isc-console-webapp</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>nl.bzk.migratiebrp.voisc</groupId>
      <artifactId>migr-voisc-runtime</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <id>docker-release</id>
      <properties>
        <docker.registry>fac-reg.modernodam.nl:5000</docker.registry>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.4.0</version>
            <executions>
              <execution>
                <id>docker-export-isc</id>
                <phase>verify</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <workingDirectory>target</workingDirectory>
                  <executable>docker</executable>
                  <commandlineArgs>
                                        save --output=migr-isc-${project.version}.tar
                                        migr-routering-database:${project.version}
                                        migr-routering-runtime:${project.version}
                                        migr-synchronisatie-runtime:${project.version}
                                        migr-synchronisatie-runtime-naarlo3:${project.version}
                                        migr-synchronisatie-runtime-naarbrp:${project.version}
                                        migr-isc-database:${project.version}
                                        migr-isc-runtime:${project.version}
                                        migr-isc-console:${project.version}
                                        migr-voisc-database:${project.version}
                                        migr-voisc-runtime:${project.version}
                                        migr-init-logging-runtime:${project.version}
                                        migr-init-naarlo3:${project.version}
                                        migr-init-naarbrp:${project.version}
                                    </commandlineArgs>
                </configuration>
              </execution>
              <execution>
                <id>docker-export-tools</id>
                <phase>verify</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <workingDirectory>target</workingDirectory>
                  <executable>docker</executable>
                  <commandlineArgs>
                                        save --output=migr-tools-${project.version}.tar
                                        migr-tools-brp-database:${project.version}
                                        migr-tools-brp-routering:${project.version}
                                        migr-tools-gbav-database:${project.version}
                                        migr-tools-mailbox:${project.version}
                                        migr-tools-hornetq:${project.version}
                                    </commandlineArgs>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
