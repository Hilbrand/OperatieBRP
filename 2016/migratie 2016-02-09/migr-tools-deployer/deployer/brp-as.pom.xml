<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
	<artifactId>migr-isc-deploy-brp-as</artifactId>
	<name>Migr - ISC - Deploy - Deploy BRP AS</name>
	<packaging>pom</packaging>
	<parent>
		<groupId>nl.bzk.migratiebrp.isc.deploy</groupId>
		<artifactId>migr-isc-deploy-properties</artifactId>
		<version>1.0</version>
		<relativePath>./deploy-properties.pom.xml</relativePath>
	</parent>
	
	<dependencies>
		<dependency>
			<groupId>nl.bzk.brp.levering.kern</groupId>
			<artifactId>brp-levering-kern-lo3conversie</artifactId>
			<version>${brp.version}</version>
		</dependency>
		
		<dependency>
			<!-- dependency nodig voor volgorde van projecten -->
			<groupId>nl.bzk.migratiebrp.build</groupId>
			<artifactId>migr-build-latestsnapshot</artifactId>
			<version>LATEST</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	
	<profiles>
		<profile>
			<id>install</id>
			<activation>
				<property>
					<name>deploy.target</name>
					<value>install</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>copy</id>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
									<outputDirectory>migr-brp</outputDirectory>
									<artifactItems>
										<artifactItem>
											<groupId>nl.bzk.brp.bijhouding</groupId>
											<artifactId>brp-bijhouding-webservice</artifactId>
											<type>war</type>
											<version>${brp.version}</version>
											<destFileName>bijhouding.war</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>nl.bzk.brp.bevraging</groupId>
											<artifactId>brp-bevraging-webservice</artifactId>
											<type>war</type>
											<version>${brp.version}</version>
											<destFileName>bevraging.war</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>nl.bzk.brp.levering.services</groupId>
											<artifactId>brp-levering-services-bezemwagen</artifactId>
											<type>war</type>
											<version>${brp.version}</version>
											<destFileName>brp-levering-services-bezemwagen.war</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>nl.bzk.brp.levering.services</groupId>
											<artifactId>brp-levering-services-mutatielevering</artifactId>
											<type>war</type>
											<version>${brp.version}</version>
											<destFileName>brp-levering-services-mutatielevering.war</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>nl.bzk.brp.levering.services</groupId>
											<artifactId>brp-levering-services-verzending</artifactId>
											<type>war</type>
											<version>${brp.version}</version>
											<destFileName>brp-levering-services-verzending.war</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>nl.bzk.brp.gba</groupId>
											<artifactId>brp-gba-centrale</artifactId>
											<type>war</type>
											<version>${brp.version}</version>
											<destFileName>brp-gba-centrale.war</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>nl.bzk.brp.levering.services</groupId>
											<artifactId>brp-levering-services-isc-route</artifactId>
											<type>war</type>
											<version>${brp.version}</version>
											<destFileName>brp-isc-bridge.war</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>nl.bzk.brp.levering.services</groupId>
											<artifactId>brp-levering-services-afnemer-voorbeeld</artifactId>
											<type>war</type>
											<version>${brp.version}</version>
											<destFileName>afnemer-voorbeeld.war</destFileName>
										</artifactItem>
										<artifactItem>
											<groupId>nl.bzk.brp.beheer</groupId>
											<artifactId>brp-beheer-api</artifactId>
											<type>war</type>
											<version>${brp.version}</version>
											<destFileName>brp-beheer.war</destFileName>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>1.4.1</version>
				<dependencies>
					<dependency>
						<groupId>nl.bzk.migratiebrp.build</groupId>
						<artifactId>migr-build-latestsnapshot</artifactId>
						<version>LATEST</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>enforce</id>
						<configuration>
							<rules>
								<latestSnapshotRule implementation="nl.bzk.migratiebrp.build.latestsnapshot.LatestSnapshotRule">
									<groupId>nl.bzk.brp.levering.kern</groupId>
									<artifactId>brp-levering-kern-lo3conversie</artifactId>
								</latestSnapshotRule>
							</rules>
						</configuration>
						<goals>
							<goal>enforce</goal>
						</goals>
					</execution>
				</executions>
			</plugin>


			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<phase>install</phase>
						<configuration>
							<target>
								<fail unless="deploy.target" message="Geen deploy.target opgegeven!"/>
								<fail unless="deploy.propfile" message="Geen deploy.propfile opgegeven!"/>
								<fail message="${deploy.propfile} bestaat niet!">
									<condition>
										<not>
											<resourcecount count="1">
												<fileset dir="${basedir}">
													<include name="${deploy.propfile}"/>
												</fileset>
											</resourcecount>
										</not>
									</condition>
								</fail>
								<ant antfile="${basedir}/build/brp-as.build.xml" useNativeBasedir="true" inheritAll="false" inheritRefs="false" target="${deploy.target}">
									<property file="${deploy.propfile}"/>
								</ant>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>org.apache.ant</groupId>
						<artifactId>ant-jsch</artifactId>
						<version>1.9.2</version>
						<exclusions>
							<exclusion>
								<groupId>ant</groupId>
								<artifactId>ant</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
					<dependency>
						<groupId>ant-contrib</groupId>
						<artifactId>ant-contrib</artifactId>
						<version>1.0b3</version>
						<exclusions>
							<exclusion>
								<groupId>ant</groupId>
								<artifactId>ant</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
					<dependency>
						<groupId>nl.bzk.migratiebrp.tools</groupId>
						<artifactId>migr-tools-controle</artifactId>
						<version>${isc.version}</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>
</project>
