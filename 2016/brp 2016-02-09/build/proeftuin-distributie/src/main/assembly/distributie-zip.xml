<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>brp</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/main/doc</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>LEESMIJ</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/logging</directory>
            <outputDirectory>proeftuin/logging</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/doc/proeftuin</directory>
            <outputDirectory>proeftuin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/database-dump</directory>
            <outputDirectory>proeftuin/database-dump</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/certificaten</directory>
            <outputDirectory>certificaten</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/soapui-tests</directory>
            <outputDirectory>proeftuin/soapui-tests</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/brp-distributie-${brp.release.versie}</directory>
            <outputDirectory>brp-distributie</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/bezemwagen</directory>
            <outputDirectory>brp-distributie/artefacten/levering</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/drivers</directory>
            <outputDirectory>drivers</outputDirectory>
        </fileSet>
    </fileSets>

</assembly>
