<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="
            http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
            http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>testsoftware-package</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>

        <fileSet>
            <directory>src/main/assembly/tomcat</directory>
            <outputDirectory>tomcat</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/testcases</directory>
            <outputDirectory>testclient/testcases</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/allejars</directory>
            <outputDirectory>testclient/jars</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory>testclient</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/nieuwestijluitgepakt</directory>
            <outputDirectory>testclient</outputDirectory>
        </fileSet>

    </fileSets>

    <files>
        <file>
            <source>src/main/assembly/LEESMIJ.txt</source>
        </file>
        <file>
            <source>src/main/assembly/start.sh</source>
            <outputDirectory>testclient</outputDirectory>
        </file>
        <file>
            <source>src/main/assembly/landscape.groovy</source>
            <outputDirectory>testclient</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/database/93-deleteCascade.sql</source>
            <outputDirectory>testclient/database</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/artdata/brp-testdata/art-testdata.sql</source>
            <outputDirectory>testclient/database</outputDirectory>
        </file>
    </files>


</assembly>
