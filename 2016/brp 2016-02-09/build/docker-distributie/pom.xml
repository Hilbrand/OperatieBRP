<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nl.bzk.brp</groupId>
        <artifactId>brp-parent</artifactId>
        <version>94-SNAPSHOT</version>
        <relativePath>../../brp-parent</relativePath>
    </parent>
    <artifactId>brp-docker-distributie</artifactId>
    <name>BRP Docker Distributie</name>
    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>software-package</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-assembly</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/docker-assembly.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>docker-distributie</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.4.0</version>
                        <executions>
                            <execution>
                                <id>docker-pull</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>docker</executable>
                                    <workingDirectory>target/docker</workingDirectory>
                                    <commandlineArgs>
                                        pull ${docker.registry}/sleutel
                                    </commandlineArgs>
                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-save</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>docker</executable>
                                    <workingDirectory>target/docker</workingDirectory>
                                    <commandlineArgs>
                                        save
                                        -o
                                        brp-docker-repository.tar
                                        ${docker.registry}/sleutel
                                        brp/database:${project.version}
                                        brp/brp-message-broker:${project.version}
                                        brp/mutatielevering:${project.version}
                                        brp/synchronisatie:${project.version}
                                        brp/verzending:${project.version}
                                        brp/onderhoud-afnemerindicaties:${project.version}
                                        brp/protocollering:${project.version}
                                        brp/beheer:${project.version}
                                        brp/bijhouding:${project.version}
                                        brp/logging-elasticsearch:${project.version}
                                        brp/logging-logstash:${project.version}
                                        brp/logging-kibana:${project.version}
                                    </commandlineArgs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <scm>
        <connection>scm:svn:https://www.modernodam.nl/svn/brp-code/trunk/build/docker-distributie</connection>
        <developerConnection>scm:svn:https://www.modernodam.nl/svn/brp-code/trunk/build/docker-distributie</developerConnection>
    </scm>
</project>
