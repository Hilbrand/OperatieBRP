<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nl.bzk.brp</groupId>
        <artifactId>brp-parent</artifactId>
        <version>96-SNAPSHOT</version>
        <relativePath>../../brp-parent</relativePath>
    </parent>
    <artifactId>brp-distributie</artifactId>
    <name>BRP Distributie</name>
    <packaging>pom</packaging>
    <description>
        Project specifiek voor het maken van een distributie bestand t.b.v. de BRP Service(s).
    </description>

    <properties>
        <levering.groupId>nl.bzk.brp.levering</levering.groupId>
        <bijhouding.groupId>nl.bzk.brp.bijhouding</bijhouding.groupId>
        <bevraging.groupId>nl.bzk.brp.bevraging</bevraging.groupId>
        <beheer.groupId>nl.bzk.brp.beheer</beheer.groupId>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>parse-version</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <echo>Major: ${parsedVersion.majorVersion}</echo>
                                <echo>Minor: ${parsedVersion.minorVersion}</echo>
                                <echo>Incremental: ${parsedVersion.incrementalVersion}</echo>
                                <echo>Qualifier: ${parsedVersion.qualifier}</echo>
                                <echo>BuildNumber: ${parsedVersion.buildNumber}</echo>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-installed</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.postgresql</groupId>
                                    <artifactId>postgresql</artifactId>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/tomcat_extra_jars</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-db-scripts</id>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>nl.bzk.brp.algemeen.opslag</groupId>
                                    <artifactId>brp-algemeen-opslag-database</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>handmatige_database_setup</classifier>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/database</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>nl.bzk.brp.properties</groupId>
                                    <artifactId>brp-test-properties</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/properties_jar</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.agilejava.docbkx</groupId>
                <artifactId>docbkx-maven-plugin</artifactId>
                <version>${docbkx.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate-pdf</goal>
                        </goals>
                        <phase>generate-sources</phase>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>net.sf.xslthl</groupId>
                        <artifactId>xslthl</artifactId>
                        <version>2.0.1</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
                <configuration>
                    <xincludeSupported>true</xincludeSupported>
                    <sectionAutolabel>true</sectionAutolabel>
                    <sectionLabelIncludesComponentLabel>true</sectionLabelIncludesComponentLabel>
                    <bodyStartIndent>0</bodyStartIndent>
                    <foCustomization>src/docbkx/docbook-fo.xsl</foCustomization>
                    <highlightSource>1</highlightSource>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>nl.bzk.brp.algemeen.opslag</groupId>
            <artifactId>brp-algemeen-opslag-database</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>nl.bzk.brp.bijhouding</groupId>
            <artifactId>brp-bijhouding-webservice</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.brp.bevraging</groupId>
            <artifactId>brp-bevraging-webservice</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>${levering.groupId}.services</groupId>
            <artifactId>brp-levering-services-mutatielevering</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>${levering.groupId}.services</groupId>
            <artifactId>brp-levering-services-verzending</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>${levering.groupId}.services</groupId>
            <artifactId>brp-levering-services-onderhoud-afnemerindicaties</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>${levering.groupId}.services</groupId>
            <artifactId>brp-levering-services-synchronisatie</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>${levering.groupId}.services</groupId>
            <artifactId>brp-levering-services-bezemwagen</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.brp</groupId>
            <artifactId>brp-message-broker</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>${levering.groupId}.protocollering</groupId>
            <artifactId>brp-levering-protocollering</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>${levering.groupId}.services</groupId>
            <artifactId>brp-levering-services-afnemer-voorbeeld</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>nl.bzk.brp.beheer</groupId>
            <artifactId>brp-beheer-api</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>

    </dependencies>

    <scm>
        <connection>scm:svn:https://www.modernodam.nl/svn/brp-code/trunk/build/distributie</connection>
        <developerConnection>scm:svn:https://www.modernodam.nl/svn/brp-code/trunk/build/distributie</developerConnection>
    </scm>

    <profiles>
        <profile>
            <id>software-package</id>
            <dependencies>
                <dependency>
                    <groupId>${levering.groupId}.services</groupId>
                    <artifactId>brp-levering-services-mutatielevering</artifactId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
                <dependency>
                    <groupId>${levering.groupId}.services</groupId>
                    <artifactId>brp-levering-services-synchronisatie</artifactId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
                <dependency>
                    <groupId>${levering.groupId}.services</groupId>
                    <artifactId>brp-levering-services-verzending</artifactId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
                <dependency>
                    <groupId>${levering.groupId}.protocollering</groupId>
                    <artifactId>brp-levering-protocollering</artifactId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
                <dependency>
                    <groupId>${levering.groupId}.services</groupId>
                    <artifactId>brp-levering-services-onderhoud-afnemerindicaties</artifactId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
                <dependency>
                    <groupId>nl.bzk.brp</groupId>
                    <artifactId>brp-message-broker</artifactId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
                <dependency>
                    <groupId>${bijhouding.groupId}</groupId>
                    <artifactId>brp-bijhouding-webservice</artifactId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
                <dependency>
                    <groupId>${bevraging.groupId}</groupId>
                    <artifactId>brp-bevraging-webservice</artifactId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
                <dependency>
                    <groupId>${beheer.groupId}</groupId>
                    <artifactId>brp-beheer-api</artifactId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-assembly</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptors>
                                        <!-- Synchronisatie & Attendering -->
                                        <descriptor>src/main/assembly/software-synchronisatie-attendering.xml</descriptor>
                                        <descriptor>src/main/assembly/docs-installatie-synchronisatie-attendering.xml</descriptor>
                                        <descriptor>src/main/assembly/docs-beheer-synchronisatie-attendering.xml</descriptor>
                                        <!-- Bijhouding -->
                                        <descriptor>src/main/assembly/software-bijhouding.xml</descriptor>
                                        <descriptor>src/main/assembly/docs-installatie-bijhouding.xml</descriptor>
                                        <descriptor>src/main/assembly/docs-beheer-bijhouding.xml</descriptor>
                                        <!-- Bevraging -->
                                        <descriptor>src/main/assembly/software-bevraging.xml</descriptor>
                                        <descriptor>src/main/assembly/docs-installatie-bevraging.xml</descriptor>
                                        <descriptor>src/main/assembly/docs-beheer-bevraging.xml</descriptor>
                                        <!-- Beheer -->
                                        <descriptor>src/main/assembly/software-beheer.xml</descriptor>
                                        <descriptor>src/main/assembly/docs-installatie-beheer.xml</descriptor>
                                        <descriptor>src/main/assembly/docs-beheer-beheer.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
