<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:amq="http://activemq.apache.org/schema/core"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd
	">

    <!-- Zet een test broker op -->
    <amq:broker id="broker" persistent="false" useJmx="false" brokerName="localhost">
        <amq:transportConnectors>
            <amq:transportConnector uri="${jms.broker.ah.url}"/>
        </amq:transportConnectors>
    </amq:broker>

    <amq:queue id="AHQueue" physicalName="${jms.broker.ah.queue}"/>
    <amq:connectionFactory id="testConnectionFactory" brokerURL="${jms.broker.ah.url}"/>

    <bean id="senderJmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="testConnectionFactory"/>
        <property name="defaultDestination" ref="AHQueue"/>
    </bean>

    <bean id="messageSender" class="support.TestMessageSender"/>
</beans>