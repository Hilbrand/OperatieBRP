
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/assembly/example</directory>
            <outputDirectory>/example/logstash</outputDirectory>
            <includes>
                <include>logstash.conf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/example</directory>
            <outputDirectory>/example/kibana</outputDirectory>
            <includes>
                <include>kibana.yml</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
    	<dependencySet>
    		<includes>
    			<include>elastic:elasticsearch</include>
    			<include>elastic:logstash</include>
    			<include>elastic:kibana</include>
    		</includes>
    	</dependencySet>
    </dependencySets>
</assembly>