<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>nl.bzk.brp.beheer</groupId>
    <artifactId>brp-beheer</artifactId>
    <version>96-SNAPSHOT</version>
  </parent>
  <artifactId>brp-beheer-logging</artifactId>
  <packaging>pom</packaging>
  <name>BRP Beheer logging</name>
  <properties>
    <elasticsearch-versie>1.6.0</elasticsearch-versie>
    <logstash-versie>1.5.0</logstash-versie>
    <kibana-versie>4.1.0-linux</kibana-versie>
  </properties>
  <repositories>
    <repository>
      <id>brpcentral</id>
      <name>Third Party</name>
      <url>https://www.modernodam.nl/nexus/content/repositories/thirdparty/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>elastic</groupId>
      <artifactId>elasticsearch</artifactId>
      <version>${elasticsearch-versie}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>elastic</groupId>
      <artifactId>logstash</artifactId>
      <version>${logstash-versie}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>elastic</groupId>
      <artifactId>kibana</artifactId>
      <version>${kibana-versie}</version>
      <classifier>x64</classifier>
      <type>tar.gz</type>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>install</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <finalName>brp-beheer-logging</finalName>
              <appendAssemblyId>false</appendAssemblyId>
              <descriptors>
                <descriptor>src/main/assembly/assembly.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
