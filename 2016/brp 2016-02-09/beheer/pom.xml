<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>nl.bzk.brp</groupId>
    <artifactId>brp-parent</artifactId>
    <version>96-SNAPSHOT</version>
    <relativePath>../brp-parent</relativePath>
  </parent>
  <groupId>nl.bzk.brp.beheer</groupId>
  <artifactId>brp-beheer</artifactId>
  <packaging>pom</packaging>
  <name>BRP Beheer applicatie</name>
  <modules>
    <module>beheer-model</module>
    <module>beheer-api</module>
    <module>beheer-logging</module>
    <module>beheer-rapportage</module>
    <module>beheer-installer</module>
  </modules>
  <properties>
    <spring.version>4.1.2.RELEASE</spring.version>
    <spring-data-jpa.version>1.7.1.RELEASE</spring-data-jpa.version>
    <spring-security.version>3.2.5.RELEASE</spring-security.version>
    <spring-ldap.version>2.0.2.RELEASE</spring-ldap.version>
    <servlet.version>3.0.1</servlet.version>
    <atomikos-version>3.9.3</atomikos-version>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>nl.bzk.brp.generatie</groupId>
        <artifactId>brp-generatie-generatoren-java</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>nl.bzk.brp.generatie</groupId>
          <artifactId>brp-generatie-generatoren-mojo</artifactId>
          <version>${project.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <!-- Kunnen debuggen is handig tijdens het ontwikkelen -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>${jdk.version}</source>
          <target>${jdk.version}</target>
          <optimize>true</optimize>
          <showWarnings>true</showWarnings>
          <encoding>UTF-8</encoding>
          <debug>true</debug>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>exclusief-gegenereerde-code</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <sonar.cpd.exclusions>**/model/beheer/**/*.java</sonar.cpd.exclusions>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>cobertura-maven-plugin</artifactId>
            <version>2.6</version>
            <configuration>
              <formats>
                <format>xml</format>
              </formats>
              <aggregate>true</aggregate>
              <instrumentation>
                <!-- Gegenereerde klassen worden uitgesloten. -->
                <excludes>
                  <exclude>nl/bzk/brp/model/beheer/autaut/**/*.class</exclude>
                  <exclude>nl/bzk/brp/model/beheer/brm/**/*.class</exclude>
                  <exclude>nl/bzk/brp/model/beheer/conv/**/*.class</exclude>
                  <exclude>nl/bzk/brp/model/beheer/ist/**/*.class</exclude>
                  <exclude>nl/bzk/brp/model/beheer/kern/**/*.class</exclude>
                </excludes>
              </instrumentation>
              <check>
                <branchRate>80</branchRate>
                <lineRate>80</lineRate>
                <haltOnFailure>false</haltOnFailure>
                <totalBranchRate>80</totalBranchRate>
                <totalLineRate>80</totalLineRate>
                <packageLineRate>80</packageLineRate>
                <packageBranchRate>80</packageBranchRate>
              </check>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-pmd-plugin</artifactId>
            <configuration>
              <failOnViolation>false</failOnViolation>
              <failurePriority>2</failurePriority>
              <printFailingErrors>true</printFailingErrors>
              <includeTests>false</includeTests>
              <!-- Toon alle meldingen in de build log -->
              <verbose>true</verbose>
              <rulesets>
                <ruleset>brp_pmd_ruleset.xml</ruleset>
              </rulesets>
              <targetJdk>${jdk.version}</targetJdk>
              <aggregate>true</aggregate>
              <detail>true</detail>
              <language>nl</language>
              <format>xml</format>
              <targetDirectory>${project.build.directory}</targetDirectory>
              <excludes>
                <!-- Gegenereerde klassen worden uitgesloten. -->
                <exclude>nl/bzk/brp/model/beheer/autaut/**/*.java</exclude>
                <exclude>nl/bzk/brp/model/beheer/brm/**/*.java</exclude>
                <exclude>nl/bzk/brp/model/beheer/conv/**/*.java</exclude>
                <exclude>nl/bzk/brp/model/beheer/ist/**/*.java</exclude>
                <exclude>nl/bzk/brp/model/beheer/kern/**/*.java</exclude>
              </excludes>
            </configuration>
            <executions>
              <execution>
                <id>pmd-cpd-excl-gegenereerde-klassen</id>
                <phase>compile</phase>
                <goals>
                  <goal>pmd</goal>
                  <goal>cpd</goal>
                </goals>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>nl.bzk.brp.build</groupId>
                <artifactId>brp-build-code-stijl-regels</artifactId>
                <version>${project.version}</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <scm>
    <connection>scm:svn:https://www.modernodam.nl/svn/brp-code/trunk/beheer</connection>
    <developerConnection>scm:svn:https://www.modernodam.nl/svn/brp-code/trunk/beheer</developerConnection>
  </scm>
</project>
