<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>src/main/resources/catalina.properties</source>
            <outputDirectory>/apache-tomcat-7.0.62/conf/</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/beheer.properties</source>
            <outputDirectory>/apache-tomcat-7.0.62/conf/</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.apache:apache-tomcat</include>
            </includes>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>apache-tomcat-7.0.62/webapps/**/*</exclude>
                    <exclude>apache-tomcat-7.0.62/conf/catalina.properties</exclude>
                </excludes>
            </unpackOptions>
            <outputDirectory>/</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>nl.bzk.brp.beheer.beheer:brp-beheer-beheer-api</include>
            </includes>
            <unpack>false</unpack>
            <outputDirectory>/apache-tomcat-7.0.62/webapps/</outputDirectory>
            <outputFileNameMapping>brp-beheer.war</outputFileNameMapping>
        </dependencySet>
    </dependencySets>
</assembly>