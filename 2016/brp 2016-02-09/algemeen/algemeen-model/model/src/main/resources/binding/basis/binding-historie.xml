<binding>

    <include path="classpath:/binding/basis/binding-attribuuttypen.xml" precompiled="false"/>

    <!-- Formele historie -->
    <mapping abstract="true" class="nl.bzk.brp.model.basis.AbstractFormeelHistorischMetActieVerantwoording"
             type-name="FormeleHistorieEntiteit">
        <structure field="formeleHistorie" map-as="FormeleHistorie"/>
    </mapping>

    <mapping abstract="true" class="nl.bzk.brp.model.basis.FormeleHistorieImpl" type-name="FormeleHistorie">
        <structure field="datumTijdRegistratie" name="tijdstipRegistratie" map-as="DatumTijdAttribuut"/>
        <structure field="datumTijdVerval" name="tijdstipVerval" map-as="DatumTijdAttribuut" usage="optional"/>
    </mapping>

    <!-- Materiele historie -->
    <mapping abstract="true" class="nl.bzk.brp.model.basis.AbstractMaterieelHistorischMetActieVerantwoording"
             type-name="MaterieleHistorieEntiteit">
        <structure field="materieleHistorie" map-as="MaterieleHistorie"/>
    </mapping>

    <mapping abstract="true" class="nl.bzk.brp.model.basis.MaterieleHistorieImpl" type-name="MaterieleHistorie">
        <structure map-as="FormeleHistorie"/>
        <structure field="datumAanvangGeldigheid" name="datumAanvangGeldigheid" map-as="DatumAttribuut"/>
        <structure field="datumEindeGeldigheid" name="datumEindeGeldigheid" map-as="DatumAttribuut" usage="optional"/>
    </mapping>

</binding>
