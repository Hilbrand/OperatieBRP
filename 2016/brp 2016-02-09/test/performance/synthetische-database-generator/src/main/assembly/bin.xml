<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
  http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>package</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/appassembler/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>maven-metadata-appassembler.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/appassembler/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>syndbgen</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/appassembler/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>syndbgen.bat</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>dos</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/appassembler/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>afnemerindicatiesvullen</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/appassembler/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>afnemerindicatiesvullen.bat</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>dos</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/appassembler/conf</directory>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <!-- Hibernate bestanden -->
        <fileSet>
            <directory>src/test/resources/hibernate</directory>
            <outputDirectory>conf/hibernate</outputDirectory>
        </fileSet>
        <!-- DB bestanden uit syndb project -->
        <fileSet>
            <directory>src/main/resources/kern/helper</directory>
            <outputDirectory>db/kern/helper</outputDirectory>
        </fileSet>
        <!-- Shell scripts -->
        <fileSet>
            <directory>src/shellscript</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
    </fileSets>
    <!-- Bestanden uit dependencies -->
    <dependencySets>
        <!-- BRP-DB: finish db sql bestanden -->
        <dependencySet>
            <outputDirectory>db</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>nl.bzk.brp:brp-db</include>
            </includes>
            <unpack>true</unpack>
            <unpackOptions>
                <includes>
                    <include>kern/helper/01-constraintsAdd.sql</include>
                    <include>kern/helper/01-indexesAdd.sql</include>
                    <include>kern/helper/92-sequencesUpdate.sql</include>
                </includes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
</assembly>
