<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>nl.moderniseringgba.migratie</groupId>
		<artifactId>migr-isc</artifactId>
		<version>0.0.33</version>
	</parent>
	
	<artifactId>migr-isc-lib</artifactId>
	<name>Migr - ISC - Externe libs</name>
	<packaging>pom</packaging>

	<build>
		<plugins>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.3.1</version>
                <executions>
                    <execution>
                        <id>install-rosetta</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>jbossesb-rosetta.jar</file>
                            <groupId>jboss</groupId>
            				<artifactId>jbossesb-rosetta</artifactId>
            				<version>4.11</version>
                            <packaging>jar</packaging>
                            <createChecksum>true</createChecksum>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-jbpm</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                        	<file>jbossesb-jbpm.jar</file>
                            <groupId>jboss</groupId>
							<artifactId>jbossesb-jbpm</artifactId>
							<version>4.10</version>
                            <packaging>jar</packaging>
                            <createChecksum>true</createChecksum>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-birt-rotated-text</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>birt.controls.lib_2.5.2.1.jar</file>
                            <groupId>birt</groupId>
            				<artifactId>controls</artifactId>
            				<version>2.5.2.1</version>
                            <packaging>jar</packaging>
                            <createChecksum>true</createChecksum>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
					
                </executions>
            </plugin>
            
		</plugins>
	</build>
	
</project>
