<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>nl.bzk.migratiebrp.test</groupId>
        <artifactId>migr-test-persoon</artifactId>
        <version>3.2.108-SNAPSHOT</version>
        <relativePath>../migr-test-persoon</relativePath>
    </parent>
    <groupId>nl.bzk.migratiebrp.test.persoon</groupId>
    <artifactId>migr-test-persoon-naarlo3</artifactId>
    <name>Migr - Test - Persoon - Conversie BRP naar LO3</name>

    <properties>
        <resource.dir>local</resource.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.util</groupId>
            <artifactId>migr-util-common</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.test</groupId>
            <artifactId>migr-test-dal</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.conversie</groupId>
            <artifactId>migr-conversie-model</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.conversie</groupId>
            <artifactId>migr-conversie-model</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.conversie</groupId>
            <artifactId>migr-conversie-regels</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.conversie</groupId>
            <artifactId>migr-conversie-regels</artifactId>
            <type>test-jar</type>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.bericht</groupId>
            <artifactId>migr-bericht-model</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.util</groupId>
            <artifactId>migr-util-excel</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.synchronisatie</groupId>
            <artifactId>migr-synchronisatie-dal</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.bzk.migratiebrp.synchronisatie</groupId>
            <artifactId>migr-synchronisatie-dal</artifactId>
            <type>test-jar</type>
        </dependency>

        <!-- DBUnit -->
        <dependency>
            <groupId>org.dbunit</groupId>
            <artifactId>dbunit</artifactId>
        </dependency>

        <!-- HyperSQL als in memory alternatief voor PostgreSQL t.b.v. unit-testen -->
        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
            <testResource>
                <directory>src/test/non-packaged-resources/${resource.dir}</directory>
            </testResource>
        </testResources>
    </build>
    <profiles>
        <profile>
            <id>default-tests</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <argLine>-Dspring.profiles.active=memoryDS</argLine>
                            <excludes>
                                <exclude>**/BrpNaarLo3ConversieTest.java</exclude>
                                <exclude>**/RegressieTest.java</exclude>
                                <exclude>**/CoverageTest.java</exclude>
                                <exclude>**/SingleTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>coverage</id>
            <properties>
                <resource.dir>regressie</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <argLine>-Dspring.profiles.active=memoryDS</argLine>
                            <excludes>
                                <exclude>**/BrpNaarLo3ConversieTest.java</exclude>
                                <exclude>**/RegressieTest.java</exclude>
                                <!--<exclude>**/CoverageTest.java</exclude>-->
                                <exclude>**/SingleTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>regressie</id>
            <properties>
                <resource.dir>regressie</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>RegressieTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.jacoco</groupId>
                        <artifactId>jacoco-maven-plugin</artifactId>
                        <configuration>
                            <destFile>${project.basedir}/../jacoco-it.exec</destFile>
                        </configuration>
                        <executions>
                            <execution>
                                <id>test</id>
                                <configuration>
                                    <skip>true</skip>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>conversie</id>
            <properties>
                <resource.dir>remote</resource.dir>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <test>BrpNaarLo3ConversieTest</test>
                            <excludes>
                                <exclude>**/*</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
