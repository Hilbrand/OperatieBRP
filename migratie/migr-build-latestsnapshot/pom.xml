	<groupId>nl.bzk.migratiebrp.build</groupId>
	<artifactId>migr-build-latestsnapshot</artifactId>
	<name>Migr - Build - Latest snapshot enforcer rule</name>
	<description>Enforcer rule om te controleren dat van een bepaalde dependency de laatste snapshot wordt gebruikt.</description>
	
    <distributionManagement>
        <repository>
            <id>brpcentral</id>
            <name>mGBA releases voor Migratie</name>
            <url>https://www.modernodam.nl/nexus/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>brpcentral</id>
            <name>mGBA snapshots voor Migratie</name>
            <url>https://www.modernodam.nl/nexus/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

	<dependencies>
		<dependency>
			<groupId>org.apache.maven.enforcer</groupId>
			<artifactId>enforcer-api</artifactId>
			<version>1.4.1</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.mojo</groupId>
			<artifactId>versions-maven-plugin</artifactId>
  			<version>2.2</version>
  		</dependency>
	</dependencies>
