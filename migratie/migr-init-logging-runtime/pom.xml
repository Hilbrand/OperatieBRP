  <artifactId>migr-init-logging-runtime</artifactId>
  <name>Migr - Initiele vulling - Logging - Runtime</name>
  <build>
    <plugins>

        </plugins>
  </build>
  <dependencies>
    <!-- Project -->
    <dependency>
      <groupId>nl.bzk.migratiebrp.init.logging</groupId>
      <artifactId>migr-init-logging-verschilanalyse</artifactId>
    </dependency>
    <dependency>
      <groupId>nl.bzk.migratiebrp.init.logging</groupId>
