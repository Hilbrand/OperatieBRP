<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/dbupdate</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/docker</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>Dockerfile</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/docker</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>postgresql.conf</include>
                <include>01_maakbrpdb.sh</include>
                <include>02_laadbrpdb.sh</include>
                <include>03_toegang.sh</include>
                <include>04_extensionunaccent.sh</include>
                <include>05_postgresconf.sh</include>
                <include>docker-entrypoint.sh</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
