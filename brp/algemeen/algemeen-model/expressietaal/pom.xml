<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>nl.bzk.brp.algemeen.model</groupId>
        <artifactId>brp-algemeen-model</artifactId>
        <version>96-SNAPSHOT</version>
    </parent>
    <artifactId>brp-algemeen-model-expressietaal</artifactId>
    <packaging>jar</packaging>

    <name>BRP Algemeen Model - Expressietaal</name>
    <description>Project voor de BRP-expressietaal.</description>

    <properties>
        <!-- De gegenereerde code voor de expressietaal door ANTLR wordt genegeerd voor alle code kwaliteits metingen -->
        <sonar.exclusions>file:**/nl/bzk/brp/expressietaal/antlr/**/*</sonar.exclusions>
    </properties>

    <dependencies>
        <dependency>
            <groupId>nl.bzk.brp.algemeen.model</groupId>
            <artifactId>brp-algemeen-model-model</artifactId>
            <version>${project.parent.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>nl.bzk.brp.algemeen.util</groupId>
            <artifactId>brp-algemeen-util-logging</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>nl.bzk.brp.algemeen.model</groupId>
            <artifactId>brp-algemeen-model-model</artifactId>
            <version>${project.parent.version}</version>
            <classifier>tests</classifier>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <scope>test</scope>
        </dependency>
        <!-- Dependencies t.b.v. tests die gebruik maken van de database en JPA voor ophalen entities. -->
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
            <!--<scope>test</scope>-->
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-entitymanager</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.data</groupId>
            <artifactId>spring-data-jpa</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>commons-dbcp</groupId>
            <artifactId>commons-dbcp</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.antlr</groupId>
            <artifactId>antlr4</artifactId>
            <version>4.1</version>
        </dependency>

    </dependencies>
    <build>
        <testResources>
            <testResource>
                <filtering>true</filtering>
                <directory>${basedir}/src/test/resources</directory>
                <excludes>
                    <exclude>db/*.sql</exclude>
                </excludes>
            </testResource>
            <testResource>
                <filtering>false</filtering>
                <directory>${basedir}/src/test/resources</directory>
                <includes>
                    <include>db/*.sql</include>
                </includes>
            </testResource>
        </testResources>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <optimize>true</optimize>
                    <showWarnings>true</showWarnings>
                    <encoding>UTF-8</encoding>
                    <debug>true</debug>
                </configuration>
            </plugin>
            <plugin>
                <groupId>nl.bzk.brp.generatie</groupId>
                <artifactId>brp-generatie-generatoren-mojo</artifactId>
                <version>${project.version}</version>
                <configuration>
                    <includes>
                        <include>symbolTableJavaGenerator</include>
                        <include>symbolTableGroepJavaGenerator</include>
                    </includes>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>nl.bzk.brp.generatie</groupId>
                        <artifactId>brp-generatie-generatoren-java</artifactId>
                        <version>${project.version}</version>
                        <scope>compile</scope>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <configuration>
                    <logViolationsToConsole>true</logViolationsToConsole>
                    <excludes>**/antlr/**/*.java</excludes>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-pmd-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/antlr/**/*.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
            </plugin>
            <plugin>
                <artifactId>maven-enforcer-plugin</artifactId>
                <executions>
                    <execution>
                        <id>enforce-no-package-cycles</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <phase>verify</phase>
                        <configuration>
                            <rules>
                                <PackageCycleRegel implementation="nl.bzk.brp.utils.maven.huisregels.PackageCycleRegel">
                                    <maxPackagesWithCycles>10</maxPackagesWithCycles>
                                </PackageCycleRegel>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <scm>
        <connection>scm:svn:https://www.modernodam.nl/svn/brp-code/trunk/algemeen/algemeen-model/expressietaal
        </connection>
      <developerConnection>scm:svn:https://www.modernodam.nl/svn/brp-code/trunk/algemeen/algemeen-model/brp-algemeen-model-expressietaal</developerConnection>
  </scm>

    <profiles>
        <profile>
            <id>lokaal</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <jdbc.driverClassName>org.postgresql.Driver</jdbc.driverClassName>
                <jdbc.password>brp</jdbc.password>
                <jdbc.url>jdbc:postgresql://localhost/brp</jdbc.url>
                <jdbc.username>brp</jdbc.username>
            </properties>
        </profile>
        <profile>
            <id>genereer-parser</id>
            <activation>
                <property>
                    <name>antlr4</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.antlr</groupId>
                        <artifactId>antlr4-maven-plugin</artifactId>
                        <version>4.1</version>
                        <configuration>
                            <sourceDirectory>${basedir}/src/main/resources</sourceDirectory>
                            <listener>false</listener>
                            <visitor>true</visitor>
                        </configuration>
                        <executions>
                            <execution>
                                <id>BRP-Expressietaal</id>
                                <goals>
                                    <goal>antlr4</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${basedir}/src/main/java/nl/bzk/brp/expressietaal/parser/antlr
                                    </outputDirectory>
                                    <libDirectory>${basedir}/src/main/java/nl/bzk/brp/expressietaal/symbols
                                    </libDirectory>
                                    <includes>
                                        <include>**/BRPExpressietaal.g4</include>
                                    </includes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>GBA-Voorwaarderegel</id>
                                <goals>
                                    <goal>antlr4</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>
                                        ${basedir}/src/main/java/nl/bzk/brp/expressietaal/parser/antlr/gba
                                    </outputDirectory>
                                    <includes>
                                        <include>**/GBAVoorwaarderegel.g4</include>
                                    </includes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
