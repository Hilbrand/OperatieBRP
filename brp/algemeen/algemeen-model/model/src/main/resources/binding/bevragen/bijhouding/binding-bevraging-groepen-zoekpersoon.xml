<binding direction="output">

    <!-- Speciale mappings voor groepen van zoekPersoon. -->

    <mapping class="nl.bzk.brp.model.operationeel.kern.HisPersoonSamengesteldeNaamModel" abstract="true"
             type-name="Groep_PersoonSamengesteldeNaamZoekPersoon_Levering">
        <structure name="samengesteldeNaam" usage="optional">
            <value style="attribute" name="voorkomenSleutel" usage="optional" get-method="getID"/>
            <structure get-method="getTijdstipRegistratie" usage="optional">
                <structure map-as="DatumTijdAttribuut" name="tijdstipRegistratie"/>
            </structure>
            <structure get-method="getDatumAanvangGeldigheid" usage="optional">
                <structure map-as="DatumAttribuut" name="datumAanvangGeldigheid"/>
            </structure>
            <structure get-method="getIndicatieAfgeleid" usage="optional">
                <structure map-as="JaNeeAttribuut" name="indicatieAfgeleid"/>
            </structure>
            <structure get-method="getIndicatieNamenreeks" usage="optional">
                <structure map-as="JaNeeAttribuut" name="indicatieNamenreeks"/>
            </structure>
            <structure get-method="getVoornamen" usage="optional">
                <structure map-as="VoornamenAttribuut" name="voornamen"/>
            </structure>
            <structure get-method="getVoorvoegsel" usage="optional">
                <structure map-as="VoorvoegselAttribuut" name="voorvoegsel"/>
            </structure>
            <structure get-method="getScheidingsteken" usage="optional">
                <structure map-as="ScheidingstekenAttribuut" name="scheidingsteken"/>
            </structure>
            <structure get-method="getGeslachtsnaamstam" usage="optional">
                <structure map-as="GeslachtsnaamstamAttribuut" name="geslachtsnaamstam"/>
            </structure>
        </structure>
    </mapping>

    <mapping class="nl.bzk.brp.model.operationeel.kern.HisPersoonAdresModel" abstract="true"
             type-name="Groep_PersoonAdresZoekPersoon_Levering">
        <value constant="PersoonAdres" style="attribute" name="objecttype"/>
        <value style="attribute" name="objectSleutel" constant="X"/>
        <value style="attribute" name="voorkomenSleutel" usage="optional" get-method="getID"/>
        <structure get-method="getTijdstipRegistratie" usage="optional">
            <structure map-as="DatumTijdAttribuut" name="tijdstipRegistratie"/>
        </structure>
        <structure get-method="getDatumAanvangGeldigheid" usage="optional">
            <structure map-as="DatumAttribuut" name="datumAanvangGeldigheid"/>
        </structure>
        <structure get-method="getSoort" usage="optional">
            <value name="soortCode" get-method="getWaarde" enum-value-method="getCode"/>
        </structure>
        <structure get-method="getIdentificatiecodeAdresseerbaarObject" usage="optional">
            <structure map-as="IdentificatiecodeAdresseerbaarObjectAttribuut"
                       name="identificatiecodeAdresseerbaarObject"/>
        </structure>
        <structure get-method="getIdentificatiecodeNummeraanduiding" usage="optional">
            <structure map-as="IdentificatiecodeNummeraanduidingAttribuut" name="identificatiecodeNummeraanduiding"/>
        </structure>
        <structure get-method="getGemeente" usage="optional">
            <structure map-as="GemeenteAttribuut" name="gemeenteCode"/>
        </structure>
        <structure get-method="getNaamOpenbareRuimte" usage="optional">
            <structure map-as="NaamOpenbareRuimteAttribuut" name="naamOpenbareRuimte"/>
        </structure>
        <structure get-method="getHuisnummer" usage="optional">
            <structure map-as="HuisnummerAttribuut" name="huisnummer"/>
        </structure>
        <structure get-method="getHuisletter" usage="optional">
            <structure map-as="HuisletterAttribuut" name="huisletter"/>
        </structure>
        <structure get-method="getHuisnummertoevoeging" usage="optional">
            <structure map-as="HuisnummertoevoegingAttribuut" name="huisnummertoevoeging"/>
        </structure>
        <structure get-method="getPostcode" usage="optional">
            <structure map-as="PostcodeAttribuut" name="postcode"/>
        </structure>
        <structure get-method="getWoonplaatsnaam" usage="optional">
            <structure map-as="NaamEnumeratiewaardeAttribuut" name="woonplaatsnaam"/>
        </structure>
        <structure get-method="getLocatieomschrijving" usage="optional">
            <structure map-as="LocatieomschrijvingAttribuut" name="locatieomschrijving"/>
        </structure>
        <structure get-method="getBuitenlandsAdresRegel1" usage="optional">
            <structure map-as="AdresregelAttribuut" name="buitenlandsAdresRegel1"/>
        </structure>
        <structure get-method="getBuitenlandsAdresRegel2" usage="optional">
            <structure map-as="AdresregelAttribuut" name="buitenlandsAdresRegel2"/>
        </structure>
        <structure get-method="getBuitenlandsAdresRegel3" usage="optional">
            <structure map-as="AdresregelAttribuut" name="buitenlandsAdresRegel3"/>
        </structure>
        <structure get-method="getBuitenlandsAdresRegel4" usage="optional">
            <structure map-as="AdresregelAttribuut" name="buitenlandsAdresRegel4"/>
        </structure>
        <structure get-method="getBuitenlandsAdresRegel5" usage="optional">
            <structure map-as="AdresregelAttribuut" name="buitenlandsAdresRegel5"/>
        </structure>
        <structure get-method="getBuitenlandsAdresRegel6" usage="optional">
            <structure map-as="AdresregelAttribuut" name="buitenlandsAdresRegel6"/>
        </structure>
        <structure get-method="getLandGebied" usage="optional">
            <structure map-as="LandGebiedAttribuut" name="landGebiedCode"/>
        </structure>
    </mapping>

    <mapping class="nl.bzk.brp.model.operationeel.kern.HisPersoonNaamgebruikModel" abstract="true"
             type-name="Groep_PersoonNaamgebruikZoekPersoon_Levering">
        <structure name="naamgebruik" usage="optional">
            <value style="attribute" name="voorkomenSleutel" usage="optional" get-method="getID"/>
            <structure name="tijdstipRegistratie" map-as="DatumTijdAttribuut" get-method="getTijdstipRegistratie"/>
            <structure get-method="getNaamgebruik" usage="optional">
                <value name="code" get-method="getWaarde" enum-value-method="getCode"/>
            </structure>
            <structure get-method="getIndicatieNaamgebruikAfgeleid" usage="optional">
                <structure map-as="JaNeeAttribuut" name="indicatieAfgeleid"/>
            </structure>
            <structure get-method="getGeslachtsnaamstamNaamgebruik" usage="optional">
                <structure map-as="GeslachtsnaamstamAttribuut" name="geslachtsnaamstam"/>
            </structure>
        </structure>
    </mapping>
</binding>
