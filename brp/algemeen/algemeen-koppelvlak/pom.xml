<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>brp-parent</artifactId>
        <groupId>nl.bzk.brp</groupId>
        <version>96-SNAPSHOT</version>
        <relativePath>../../brp-parent</relativePath>
    </parent>

    <groupId>nl.bzk.brp.algemeen</groupId>
    <artifactId>brp-algemeen-koppelvlak</artifactId>
    <packaging>jar</packaging>

    <name>BRP Algemeen Koppelvlak</name>
    <description>BRP koppelvlak bevat de XSD beschrijving van het Koppelvlak.</description>
    <scm>
        <connection>scm:svn:https://www.modernodam.nl/svn/brp-code/trunk/algemeen/algemeen-koppelvlak</connection>
        <developerConnection>scm:svn:https://www.modernodam.nl/svn/brp-code/trunk/algemeen/algemeen-koppelvlak</developerConnection>
    </scm>

    <properties>
        <built.on>${maven.build.timestamp}</built.on>
        <maven.build.timestamp.format>yyyy-MM-dd HH:mm</maven.build.timestamp.format>
        <sonar.exclusions>**/package-info.java</sonar.exclusions>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-slf4j-impl</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>project-distributie</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/xsd.xml</descriptor>
                        <descriptor>src/main/assembly/wsdl.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-codegen-plugin</artifactId>
                <executions>
                    <execution>
                        <id>check-wsdl</id>
                        <phase>test</phase>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                        <configuration>
                            <sourceRoot>${project.build.directory}/generated-sources/</sourceRoot>
                            <wsdlOptions>
                                <wsdlOption>
                                    <wsdl>${project.basedir}/src/main/resources/wsdl/levering-afnemerindicaties.wsdl</wsdl>
                                    <serviceName>AfnemerindicatiesService</serviceName>
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${project.basedir}/src/main/resources/wsdl/bijhouding.wsdl</wsdl>
                                    <serviceName>BijhoudingService</serviceName>
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${project.basedir}/src/main/resources/wsdl/bijhouding-bevraging.wsdl</wsdl>
                                    <serviceName>BijhoudingBevragingService</serviceName>
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${project.basedir}/src/main/resources/wsdl/levering-synchronisatie.wsdl</wsdl>
                                    <serviceName>SynchronisatieService</serviceName>
                                </wsdlOption>
                            </wsdlOptions>
                            <markerDirectory>${project.build.directory}/dependency/koppelvlak</markerDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
            </plugin>

        </plugins>
    </build>
</project>
