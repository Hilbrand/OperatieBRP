<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="
            http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
            http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>docs-installatie-synchronisatie-attendering</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
       <fileSet>
            <directory>src/main/doc/installatie</directory>
            <outputDirectory>documentatie</outputDirectory>
            <includes>
                <include>*.pdf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/database/documentatie</directory>
            <outputDirectory>documentatie</outputDirectory>
            <includes>
                <include>*.pdf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/docbkx/pdf</directory>
            <outputDirectory>documentatie</outputDirectory>
            <includes>
                <include>**/*Installatiehandleiding*Synchronisatie en Attendering.pdf</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>src/main/root/LEESMIJ-DOCS-SYNCHRONISATIE-ATTENDERING</source>
            <destName>LEESMIJ</destName>
        </file>
    </files>

</assembly>
