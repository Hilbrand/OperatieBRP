<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>artefacten</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>/keystores</outputDirectory>
            <directory>src/main/keystores/server</directory>
            <includes>
                <include>*.jks</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/keystores</outputDirectory>
            <directory>src/main/keystores/afnemer</directory>
            <includes>
                <include>afnemers-trust.jks</include>
                <include>client.jks</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/configuratie</outputDirectory>
            <directory>target/properties/${environment}/</directory>
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/bin</outputDirectory>
            <directory>src/main/bin</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0750</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>/site</outputDirectory>
            <directory>target/site</directory>
            <fileMode>644</fileMode>
        </fileSet>

    </fileSets>
