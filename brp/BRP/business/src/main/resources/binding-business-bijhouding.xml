<binding package="nl.bzk.brp">

    <namespace uri="http://www.bprbzk.nl/BRP/0100" default="all" prefix="brp"/>

    <include path="classpath:/binding-bijhouding-bericht.xml" precompiled="true"/>
    <include path="classpath:/binding-stuf.xml" precompiled="true"/>

    <!-- AFS_RegistreerGeboorte_B -->
    <mapping name="AFS_RegistreerGeboorte_B" class="nl.bzk.brp.business.dto.bijhouding.InschrijvingGeboorteBericht">
        <structure map-as="Objecttype_Bericht_Bijhouding"/>
    </mapping>

    <!-- MIG_RegistreerVerhuizing_B -->
    <mapping name="MIG_RegistreerVerhuizing_B" class="nl.bzk.brp.business.dto.bijhouding.VerhuizingBericht">
        <structure map-as="Objecttype_Bericht_Bijhouding"/>
    </mapping>

    <!-- MIG_CorrigeerAdres_B -->
    <mapping name="MIG_CorrigeerAdres_B" class="nl.bzk.brp.business.dto.bijhouding.CorrectieAdresBericht">
        <structure map-as="Objecttype_Bericht_Bijhouding"/>
    </mapping>

    <!-- OVL_RegistreerOverlijden_B -->
    <mapping name="OVL_RegistreerOverlijden_B" class="nl.bzk.brp.business.dto.bijhouding.RegistratieOverlijdenBericht">
        <structure map-as="Objecttype_Bericht_Bijhouding"/>
    </mapping>

    <!-- Objecttype_Bericht_Bijhouding -->
    <mapping abstract="true" type-name="Objecttype_Bericht_Bijhouding" class="nl.bzk.brp.business.dto.bijhouding.AbstractBijhoudingsBericht">
        <structure name="stuurgegevens" map-as="Stuurgegevens_Bijhouding" get-method="getStuurgegevens" set-method="setStuurgegevens"/>
        <structure map-as="Objecttype_Bericht"/>
    </mapping>
</binding>
