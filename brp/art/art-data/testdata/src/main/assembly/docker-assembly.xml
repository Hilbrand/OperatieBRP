<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/brp-algemeen-opslag-database</directory>
            <outputDirectory>/dbupdate</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>target/classes/brp-testdata</directory>
            <outputDirectory>/dbupdate/testdata</outputDirectory>
            <includes>
                <include>*.sql</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>target/brp-algemeen-opslag-database/kern/helper</directory>
            <outputDirectory>/dbupdate</outputDirectory>
            <includes>
                <include>93-deleteCascade.sql</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/docker</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.conf</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/docker</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>Dockerfile</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
</assembly>
