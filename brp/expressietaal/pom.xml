<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>
    <parent>
        <groupId>nl.bzk.brp</groupId>
        <artifactId>root-pom</artifactId>
        <version>0.2.1</version>
    </parent>
    <groupId>nl.bzk.brp.expressietaal</groupId>
    <artifactId>expressietaal</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>Expressie taal</name>
    <description>
        Project voor de expressie taal.
    </description>

    <developers>
        <developer>
            <id>maels</id>
            <name>Mark van Elswijk</name>
            <email>Mark.vanElswijk@moderniseringgba.nl</email>
            <organization>ICTU</organization>
            <organizationUrl>http://www.ictu.nl/</organizationUrl>
            <timezone>+1</timezone>
        </developer>
    </developers>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <optimize>true</optimize>
                    <showWarnings>true</showWarnings>
                    <encoding>UTF-8</encoding>
                    <debug>true</debug>
                </configuration>
            </plugin>
            <plugin>
                <groupId>nl.bzk.brp.generatoren</groupId>
                <artifactId>generatoren-mojo</artifactId>
                <configuration>
                    <includes>
                        <include>symbolTableJavaGenerator</include>
                    </includes>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>nl.bzk.brp.generatoren</groupId>
                        <artifactId>java-generatoren</artifactId>
                        <version>1.0-SNAPSHOT</version>
                        <scope>compile</scope>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>nl.bzk.brp</groupId>
            <artifactId>model</artifactId>
            <version>0.3.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>nl.bzk.brp</groupId>
            <artifactId>model</artifactId>
            <version>0.3.0-SNAPSHOT</version>
            <classifier>tests</classifier>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>libs-release-brp</id>
            <name>mGBA Artifactory-releases voor BRP</name>
            <url>https://www.modernodam.nl/artifactory/libs-release-brp</url>
        </repository>
        <repository>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>warn</checksumPolicy>
            </snapshots>
            <id>libs-snapshot-brp</id>
            <name>mGBA Artifactory-snapshots voor BRP</name>
            <url>https://www.modernodam.nl/artifactory/libs-snapshot-brp</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>libs-release-brp</id>
            <name>mGBA Artifactory-releases voor BRP</name>
            <url>https://www.modernodam.nl/artifactory/libs-release-brp</url>
        </repository>
        <snapshotRepository>
            <id>libs-snapshot-brp</id>
            <name>mGBA Artifactory-snapshots voor BRP</name>
            <url>https://www.modernodam.nl/artifactory/libs-snapshot-brp</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <connection>scm:svn:https://www.modernodam.nl/svn/brp-code/expressietaal/trunk</connection>
    </scm>

</project>