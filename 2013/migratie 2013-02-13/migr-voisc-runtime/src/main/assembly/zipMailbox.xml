
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>mailbox-bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
            <source>src/main/resources/runMailbox.sh</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
	</files>
	<fileSets>
		<fileSet>
			<outputDirectory>/data</outputDirectory>
			<directory>src/test/resources/data</directory>
			<includes>
				<include>*.csv</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>/lib</outputDirectory>
			<directory>target/lib</directory>
		</fileSet>
		<fileSet>
            <outputDirectory>/keystores</outputDirectory>
            <directory>src/main/resources/keystores</directory>
            <includes>
                <include>*.jks</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/test-classes/nl</outputDirectory>
            <directory>target/test-classes/nl</directory>
        </fileSet>
	</fileSets>
</assembly>