<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.1//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>
    <!-- Tone down the checking for test code -->
    <suppress checks="Javadoc.*" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="WriteTag" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="TypeName" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="AvoidStaticImport" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="AvoidStarImport" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="ImportOrder" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="ExecutableStatementCount" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="MethodLength" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="MagicNumber" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="StrictDuplicateCode" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="GenericWhitespace" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="MultipleStringLiterals" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="DesignForExtension" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="FinalClass" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="ThrowsCount" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="LineLength" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="LocalFinalVariableName" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="FinalLocalVariable" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="EqualsAvoidNull" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="EmptyBlock" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="ClassDataAbstractionCoupling" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="ClassFanOutComplexity" files=".*[\\/]src[\\/]test[\\/]"/>

    <!-- Tone down the checking for generated code -->
    <suppress checks="[a-zA-Z0-9]*" files="[\\/]generated-sources[\\/]" />
</suppressions>
