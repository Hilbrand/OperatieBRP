<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss} %-5p (%-18C{1}:%-3L) %m%n" />
            <!-- %d %-5p %c %x - %m%n -->
        </layout>
    </appender>

    <logger name="org.hibernate.SQL">
        <level value="info" />
    </logger>

    <logger name="org.hibernate.cfg.HbmBinder">
        <level value="warn" />
    </logger>
    <logger name="org.hibernate.cfg.AnnotationBinder">
        <level value="warn" />
    </logger>
    <logger name="org.hibernate.cfg.annotations.EntityBinder">
        <level value="warn" />
    </logger>
    <logger name="org.hibernate.tool.hbm2ddl.TableMetadata">
        <level value="warn" />
    </logger>

    <logger name="com.mchange">
        <level value="warn" />
    </logger>

    <logger name="org.apache">
        <level value="warn" />
    </logger>

    <logger name="org.apache.cxf.service.factory">
        <level value="warn" />
    </logger>

    <logger name="org.springframework">
        <level value="warn" />
    </logger>

    <logger name="net.sf.jasperreports">
        <level value="warn" />
    </logger>

    <logger name="com.mysema">
        <level value="warn" />
    </logger>

    <logger name="nl.bzk.brp.bmr">
        <level value="info" />
    </logger>

    <root>
        <priority value="warn" />
        <appender-ref ref="ConsoleAppender" />
    </root>

</log4j:configuration>
