<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>nl.bzk.brp.test</groupId>
	<artifactId>art-engine</artifactId>
	<version>1.0.1</version>
	<packaging>jar</packaging>
	<name>art-engine</name>
	<parent>
		<groupId>nl.bzk.brp</groupId>
		<artifactId>root-pom</artifactId>
		<version>0.1.17</version>
	</parent>
	<properties>
		<svn.url>https://www.modernodam.nl/svn/brp-db/</svn.url>
		<dbversion>${artifactId}-${version}</dbversion>
		<dburl>jdbc:postgresql://localhost/brp</dburl>
		<dbusername>brp</dbusername>
		<dbpassword>brp</dbpassword>
   		<timestamp>${maven.build.timestamp}</timestamp>
   		<maven.build.timestamp.format>yyyy-MM-dd HH:mm</maven.build.timestamp.format>
   		<testScript>./VoorbeeldScript</testScript>
	</properties>


	<dependencies>
		<dependency>
			<groupId>postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<version>9.1-901.jdbc4</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>test-run</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>eviware</groupId>
						<artifactId>maven-soapui-plugin</artifactId>
						<version>4.0.1</version>
						<dependencies>
							<dependency>
								<groupId>postgresql</groupId>
								<artifactId>postgresql</artifactId>
								<version>9.1-901-1.jdbc4</version>
							</dependency>
							<dependency>
								<groupId>jxl</groupId>
								<artifactId>jxl</artifactId>
								<version>2.6.12</version>
							</dependency>
							<dependency>
							  	<groupId>junit</groupId>
							  	<artifactId>junit</artifactId>
							  	<version>4.4</version>
						     </dependency>
						</dependencies>
						<configuration>
							<printReport>true</printReport>
							<exportAll>true</exportAll>
							<reportFormat>HTML</reportFormat>
							<coverage>true</coverage>
							<outputFolder>${basedir}/output/</outputFolder>
							<globalProperties>
								<value>projectEnv=${projectEnv}</value>
								<value>dataSetNaam=${dataSetNaam}</value>
								<value>testScript=${testScript}</value>
							</globalProperties>
						</configuration>
						<executions>
							<execution>
								<phase>test</phase>
								<goals>
									<goal>test</goal>
								</goals>
								<configuration>
									<projectFile>ART-soapui-project.xml</projectFile>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

      <pluginRepositories>
			<pluginRepository>
			   <id>eviwarePluginRepository</id>
			   <url>http://www.eviware.com/repository/maven2/</url>
			</pluginRepository>
      </pluginRepositories>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
			<resource>
				<directory>./</directory>
				<filtering>false</filtering>
				<includes>
					<include>**/*</include>
				</includes>
				<excludes>
					<exclude>target/**//*</exclude>
					<exclude>output/**//*</exclude>
					<exclude>temp/**//*</exclude>
<!--
					<exclude>VoorbeeldScript/**//*</exclude>
					<exclude>default.properties</exclude>
-->
					<exclude>pom.xml</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
				  <archive>
					<index>true</index>
					<manifest>
						<addDefaultSpecificationEntries />
					</manifest>
					<manifestEntries>
					  	<url>${svn.url}</url>
						<version>${version}</version>
						<project-name>${name}</project-name>
						<artifactId>${artifactId}</artifactId>
						<dbversion>${dbversion}</dbversion>
					</manifestEntries>
				  </archive>
				</configuration>
      		</plugin>
		</plugins>
	</build>
	<scm>
		<connection>scm:svn:https://www.modernodam.nl/svn/brp-code/ARTengine/tags/v1.0.1</connection>
	</scm>
</project>
