<binding package="nl.bzk.brp.poc.domein">

    <namespace uri="http://www.brp.bzk.nl/bevraging/ws/basis" prefix="bas" default="none"/>
    
    <mapping name="persoon" class="nl.bzk.brp.poc.domein.PocPersoon" abstract="true">
        <value name="bsn" ns="http://www.brp.bzk.nl/bevraging/ws/basis" field="burgerservicenummer"/>
    </mapping>

    <mapping type-name="adres" class="nl.bzk.brp.poc.domein.PocPersoonAdres" abstract="true">
        <value name="afgekorteNaamOpenbareRuimte" ns="http://www.brp.bzk.nl/bevraging/ws/basis" field="afgekorteNaamOpenbareRuimte"/>
        <value name="postcode" ns="http://www.brp.bzk.nl/bevraging/ws/basis" field="postcode"/>
        <value name="gemeenteDeel" ns="http://www.brp.bzk.nl/bevraging/ws/basis" field="gemeenteDeel"/>
        <value name="huisletter" ns="http://www.brp.bzk.nl/bevraging/ws/basis" field="huisletter"/>
        <value name="huisnummer" ns="http://www.brp.bzk.nl/bevraging/ws/basis" field="huisNummer"/>
        <value name="huisnummerToevoeging" ns="http://www.brp.bzk.nl/bevraging/ws/basis" field="huisnummertoevoeging"/>
        <value name="LocatieTOVAdres" ns="http://www.brp.bzk.nl/bevraging/ws/basis" field="locatieTOVAdres"/>

        <value name="soortAdresCode" field="soort" style="attribute"/>
    </mapping>
</binding>
