    </mapping> -->

    <mapping name="bijhoudingResultaat" class="nl.bzk.brp.poc.business.dto.antwoord.BijhoudingResultaat">
        <value name="omschrijving" field="resultaatOmschrijving"/>
    </mapping>
</binding>
