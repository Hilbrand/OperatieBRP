<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>nl.bzk.brp.bevraging</groupId>
        <artifactId>parent</artifactId>
        <version>0.1.1</version>
    </parent>
    <artifactId>business</artifactId>
    <name>Bevraging Service BRP - Business Service library</name>
    <description>
        De Service laag van de BRP Bevraging Service.
    </description>
    <packaging>jar</packaging>

        <build>
            <plugins>
             <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <configuration>
                            <tasks>
                                <exec executable="svnversion" spawn="false" failifexecutionfails="false" outputproperty="svnversion">
                                    <arg line="." />
                                </exec>
                                <mkdir dir="${project.build.outputDirectory}/nl/bzk/brp/bevraging/business/service/impl" />
                                <echo file="${project.build.outputDirectory}/nl/bzk/brp/bevraging/business/service/impl/version.xml" append="false" message="&lt;?xml version='1.0' encoding='UTF-8'?&gt;${line.separator}                                         &lt;root&gt;${line.separator}                                             &lt;mavenbuildtimestamp&gt;${maven.build.timestamp}&lt;/mavenbuildtimestamp&gt;${line.separator}                                             &lt;svnversion&gt;${svnversion}&lt;/svnversion&gt;${line.separator}                                             &lt;pomversion&gt;${pom.version}&lt;/pomversion&gt;${line.separator}                                             &lt;java_version&gt;${java.version}&lt;/java_version&gt;${line.separator}                                             &lt;java_vendor&gt;${java.vendor}&lt;/java_vendor&gt;${line.separator}                                             &lt;java_vendor_url&gt;${java.vendor.url}&lt;/java_vendor_url&gt;${line.separator}                                             &lt;java_home&gt;${java.home}&lt;/java_home&gt;${line.separator}                                             &lt;java_vm_specification_version&gt;${java.vm.specification.version}&lt;/java_vm_specification_version&gt;${line.separator}                                             &lt;java_vm_specification_vendor&gt;${java.vm.specification.vendor}&lt;/java_vm_specification_vendor&gt;${line.separator}                                             &lt;java_vm_specification_name&gt;${java.vm.specification.name}&lt;/java_vm_specification_name&gt;${line.separator}                                             &lt;java_vm_version&gt;${java.vm.version}&lt;/java_vm_version&gt;${line.separator}                                             &lt;java_vm_vendor&gt;${java.vm.vendor}&lt;/java_vm_vendor&gt;${line.separator}                                             &lt;java_vm_name&gt;${java.vm.name}&lt;/java_vm_name&gt;${line.separator}                                             &lt;java_specification_version&gt;${java.specification.version}&lt;/java_specification_version&gt;${line.separator}                                             &lt;java_specification_vendor&gt;${java.specification.vendor}&lt;/java_specification_vendor&gt;${line.separator}                                             &lt;java_specification_name&gt;${java.specification.name}&lt;/java_specification_name&gt;${line.separator}                                             &lt;java_class_version&gt;${java.class.version}&lt;/java_class_version&gt;${line.separator}                                             &lt;java_class_path&gt;${java.class.path}&lt;/java_class_path&gt;${line.separator}                                             &lt;java_library_path&gt;${java.library.path}&lt;/java_library_path&gt;${line.separator}                                             &lt;java_io_tmpdir&gt;${java.io.tmpdir}&lt;/java_io_tmpdir&gt;${line.separator}                                             &lt;java_ext_dirs&gt;${java.ext.dirs}&lt;/java_ext_dirs&gt;${line.separator}                                             &lt;os_name&gt;${os.name}&lt;/os_name&gt;${line.separator}                                             &lt;os_arch&gt;${os.arch}&lt;/os_arch&gt;${line.separator}                                             &lt;os_version&gt;${os.version}&lt;/os_version&gt;${line.separator}                                         &lt;/root&gt;${line.separator}" />
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
             </plugin>
            </plugins>
        </build>

    <dependencies>

        <!-- Project -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>data-access</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>model</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Spring -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-aop</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.aspectj</groupId>
            <artifactId>aspectjweaver</artifactId>
        </dependency>

        <!-- Logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
