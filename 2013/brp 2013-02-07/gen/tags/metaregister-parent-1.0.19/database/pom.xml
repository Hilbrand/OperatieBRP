<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>nl.bzk.brp.metaregister</groupId>
		<artifactId>metaregister-parent</artifactId>
		<version>1.0.19</version>
	</parent>
	<artifactId>database</artifactId>
	<packaging>pom</packaging>
	<name>BMR metaregister database</name>
	<description>Project dat de database van het BMR aanmaakt en een export van de originele BMR importeert in een portable hsqldb database</description>
	<scm>
		<connection>scm:svn:https://www.modernodam.nl/svn/brp-code/gen/tags/metaregister-parent-1.0.19/database</connection>
		<developerConnection>scm:svn:https://www.modernodam.nl/svn/brp-code/gen/tags/metaregister-parent-1.0.19/database</developerConnection>
		<url>https://www.modernodam.nl/svn/brp-code/gen/tags/metaregister-parent-1.0.19/database</url>
	</scm>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jdk.version>1.6</jdk.version>
		<hsqldb.version>2.2.8</hsqldb.version>
		<bmrDriver>org.firebirdsql.jdbc.FBDriver</bmrDriver>
		<bmrUrl>jdbc:firebirdsql://brp-metaregister.modernodam.nl:3050/BRP</bmrUrl>
		<bmrUser>GEN</bmrUser>
		<bmrPassword>gen</bmrPassword>
		<exportDriver>org.hsqldb.jdbcDriver</exportDriver>
		<exportUrl>jdbc:hsqldb:file:${project.build.directory}/database/brp-metaregister.db;create=true;user=generator;password=generator;shutdown=true;sessionVariables=REFERENTIAL_INTEGRITY=0;</exportUrl>
		<exportUser>generator</exportUser>
		<exportPassword>generator</exportPassword>
		<schemaDefinitionFile>src/main/resources/dbchangelog-master.xml</schemaDefinitionFile>
		<foreignkeyDefinitionFile>src/main/resources/dbchangelog-master-foreignkeys.xml</foreignkeyDefinitionFile>
		<exportedDataSetFile>${project.build.directory}/bmr-exports.xml</exportedDataSetFile>
		<skipExport>false</skipExport>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.dbunit</groupId>
			<artifactId>dbunit</artifactId>
			<version>2.4.8</version>
		</dependency>
		<dependency>
			<groupId>org.hsqldb</groupId>
			<artifactId>hsqldb</artifactId>
			<version>${hsqldb.version}</version>
		</dependency>

	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<source>${jdk.version}</source>
					<target>${jdk.version}</target>
					<optimize>true</optimize>
					<showWarnings>true</showWarnings>
					<encoding>${project.build.sourceEncoding}</encoding>
					<debug>true</debug>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.liquibase</groupId>
				<artifactId>liquibase-maven-plugin</artifactId>
				<version>2.0.5</version>
				<executions>
					<execution>
						<id>create-database-tables-and-views</id>
						<phase>process-resources</phase>
						<goals>
							<goal>update</goal>
						</goals>
						<configuration>
							<changeLogFile>${schemaDefinitionFile}</changeLogFile>
						</configuration>
					</execution>
					<execution>
						<id>tag-database-schema</id>
						<phase>process-resources</phase>
						<goals>
							<goal>tag</goal>
						</goals>
						<configuration>
							<tag>bmr-tabellen-en-views-ingeladen</tag>
						</configuration>
					</execution>
					<execution>
						<id>enable-foreign-keys</id>
						<phase>package</phase>
						<goals>
							<goal>update</goal>
						</goals>
						<configuration>
							<changeLogFile>${foreignkeyDefinitionFile}</changeLogFile>
							<contexts>foreign-keys</contexts>
						</configuration>
					</execution>
					<execution>
						<id>tag-bmr-schema-complete</id>
						<phase>process-resources</phase>
						<goals>
							<goal>tag</goal>
						</goals>
						<configuration>
							<tag>bmr-schema-compleet</tag>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<propertyFileWillOverride>false</propertyFileWillOverride>
					<driver>${exportDriver}</driver>
					<url>${exportUrl};</url>
					<username>${exportUser}</username>
					<password>${exportPassword}</password>
					<promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
					<verbose>true</verbose>
					<logging>INFO</logging>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.hsqldb</groupId>
						<artifactId>hsqldb</artifactId>
						<version>${hsqldb.version}</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>dbunit-maven-plugin</artifactId>
				<version>1.0-beta-3</version>
				<dependencies>
					<dependency>
						<groupId>org.firebirdsql.jdbc</groupId>
						<artifactId>jaybird</artifactId>
						<version>2.1.6</version>
						<exclusions>
							<exclusion>
								<groupId>javax.jms</groupId>
								<artifactId>jms</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
					<dependency>
						<groupId>org.hsqldb</groupId>
						<artifactId>hsqldb</artifactId>
						<version>${hsqldb.version}</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>generate-bmr-datadump</id>
						<phase>generate-test-resources</phase>
						<goals>
							<goal>export</goal>
						</goals>
						<configuration>
							<skip>${skipExport}</skip>
							<driver>${bmrDriver}</driver>
							<url>${bmrUrl}</url>
							<username>${bmrUser}</username>
							<password>${bmrPassword}</password>
							<encoding>UTF-8</encoding>
							<tables>
                            <table>
									<name>SOORT_ELEMENT</name>
								</table>
                                <table>
									<name>SOORT_BEDRIJFSREGEL</name>
								</table>
                                <table>
									<name>ELEMENT</name>
								</table>
								<table>
									<name>AFKORTING</name>
								</table>
								<table>
									<name>APPLICATIE</name>
								</table>
								<table>
									<name>ASPECT</name>
								</table>
								<table>
									<name>BEDRIJFSREGELATTRIBUUT</name>
								</table>
								<table>
									<name>BRON</name>
								</table>
								<table>
									<name>BRONATTRIBUUT</name>
								</table>
								<table>
									<name>CONTROLE</name>
								</table>
								<table>
									<name>CONTROLE_RESULTAAT</name>
								</table>
								<table>
									<name>EXPORTREGEL</name>
								</table>
								<table>
									<name>FORMULIER</name>
								</table>
								<table>
									<name>FRAME</name>
								</table>
								<table>
									<name>FRAMEVELD</name>
								</table>
								<table>
									<name>INSTELLING</name>
								</table>
								<table>
									<name>OBJECTTYPE_STATISTIEK</name>
								</table>
								<table>
									<name>OM_RESYNC_REGEL</name>
								</table>
								<table>
									<name>PLAATS_IN_ARCHITECTUUR</name>
								</table>
								<table>
									<name>SOORT_EXPORT</name>
								</table>
								<table>
									<name>TAG_IN_CODE</name>
								</table>
								<table>
									<name>TUPLE</name>
								</table>
                                <table>
									<name>SOORT_TEKST</name>
								</table>
                                <table>
									<name>TEKST</name>
								</table>
							</tables>
							<format>xml</format>
							<dest>target/bmr-export.xml</dest>
						</configuration>
					</execution>
					<execution>
						<id>create-bmr-database-with-data</id>
						<phase>process-test-resources</phase>
						<goals>
							<goal>operation</goal>
						</goals>
						<configuration>
							<type>CLEAN_INSERT</type>
							<src>target/bmr-export.xml</src>
							<driver>${exportDriver}</driver>
							<url>${exportUrl}</url>
							<username>${exportUser}</username>
							<password>${exportPassword}</password>
							<transaction>true</transaction>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<id>assemble-database</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/bmr-database.xml</descriptor>
								<descriptor>src/main/assembly/bmr-data-export.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>