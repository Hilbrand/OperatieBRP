<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>distributie</id>
    <formats>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>artifacts/javadoc</outputDirectory>
            <includes>
                <include>*:jar:javadoc</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>artifacts/WSDL</outputDirectory>
            <includes>
                <include>nl.bzk.brp:webservice:war</include>
            </includes>
            <unpack>true</unpack>
            <unpackOptions>
                <includes>
                    <include>**/wsdl/**/*.*</include>
                </includes>
            </unpackOptions>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>artifacts</outputDirectory>
            <includes>
                <include>nl.bzk.brp:webservice:war</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>