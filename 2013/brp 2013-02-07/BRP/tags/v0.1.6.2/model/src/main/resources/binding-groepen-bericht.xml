        <structure name="voorvoegsel" field="voorvoegsel" map-as="Voorvoegsel" usage="optional" nillable="true"/>
        <structure name="scheidingsteken" field="scheidingsteken" map-as="ScheidingsTeken" usage="optional" nillable="true"/>
