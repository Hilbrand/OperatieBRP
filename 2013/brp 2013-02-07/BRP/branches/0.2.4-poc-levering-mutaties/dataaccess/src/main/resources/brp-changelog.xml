<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="addColumnTijdstipverwerkingmutatie" author="bash">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists schemaName="kern" tableName="actie" columnName="tijdstipverwerkingmutatie" />
			</not>
		</preConditions>
		<addColumn schemaName="kern" tableName="actie">
    		<column name="tijdstipverwerkingmutatie" type="timestamp"/>
		</addColumn>
		<comment>nieuwe kolom tijdstipverwerkingmutatie t.b.v. JMS</comment>
	</changeSet>

</databaseChangeLog>