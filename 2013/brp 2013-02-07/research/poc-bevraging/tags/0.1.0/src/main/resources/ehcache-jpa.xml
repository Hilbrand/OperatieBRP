<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"

        name="jpaCacheManager" >

    <diskStore path="java.io.tmpdir" />

    <defaultCache
            maxEntriesLocalHeap="10000"
            timeToIdleSeconds="1800"
            timeToLiveSeconds="1800"
            overflowToDisk="true"
            maxEntriesLocalDisk="10000000"
            diskPersistent="false"
            diskExpiryThreadIntervalSeconds="120"
            memoryStoreEvictionPolicy="LRU"
            statistics="true"
            />

    <cache name="nl.bzk.copy.model.objecttype.operationeel.PersoonModel"
           maxEntriesLocalHeap="10000"
           timeToIdleSeconds="60"
           timeToLiveSeconds="60"
           statistics="true" />

    <cache name="nl.bzk.copy.model.objecttype.operationeel.statisch.Land"
           maxEntriesLocalHeap="500"
           statistics="true" />

    <cache name="nl.bzk.copy.model.objecttype.operationeel.statisch.Partij"
           maxEntriesLocalHeap="10000"
           statistics="true" />

    <cache name="nl.bzk.copy.model.objecttype.operationeel.statisch.Plaats"
           maxEntriesLocalHeap="10000"
           statistics="true" />

    <cache name="nl.bzk.copy.model.objecttype.operationeel.statisch.Predikaat"
           maxEntriesLocalHeap="100"
           statistics="true" />

    <cache name="nl.bzk.copy.model.objecttype.operationeel.statisch.AdellijkeTitel"
           maxEntriesLocalHeap="100"
           statistics="true" />

    <cache name="nl.bzk.copy.model.objecttype.operationeel.statisch.Verblijfsrecht"
           maxEntriesLocalHeap="100"
           statistics="true" />

    <cache name="nl.bzk.copy.model.objecttype.operationeel.statisch.Nationaliteit"
           maxEntriesLocalHeap="100"
           statistics="true" />

</ehcache>