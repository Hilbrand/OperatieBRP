<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>brpreview</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>src/main/config/dashboard-jdbc.properties</source>
			<outputDirectory>configuration</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/config/dashboard-restapi.properties</source>
			<outputDirectory>configuration</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/doc/Installatie-handleiding-BRPreview.docx</source>
			<outputDirectory>documentatie</outputDirectory>
			<destName>Installatie-handleiding-BRPreview-${project.version}.docx</destName> 			
		</file>
        <file>
            <source>src/main/sql/add-cascaded-delete.sql</source>
            <outputDirectory>configuration</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/sql/clear-by-date.sql</source>
            <outputDirectory>configuration</outputDirectory>
            <filtered>true</filtered>
        </file>
		<file>
			<source>src/main/sql/truncate.sql</source>
			<outputDirectory>configuration</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/sql/dashboard.sql</source>
			<outputDirectory>configuration</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>

	<dependencySets>
	
		<!--  war -->
		<dependencySet>
			<outputDirectory>artifacts</outputDirectory>
			<outputFileNameMapping>dashboard-restapi.war</outputFileNameMapping> 
			<includes>
				<include>nl.bzk.brp.brpreview:dashboard-restapi:war</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>artifacts</outputDirectory>
			<outputFileNameMapping>brpreview.war</outputFileNameMapping> 
			<includes>
				<include>nl.bzk.brp.brpreview:brpreview-dashboard-web:war</include>
			</includes>
		</dependencySet>
				
	</dependencySets>	
</assembly>
